pipeline {
    //set variables
  environment { 
    imagename = "alexprod/alexdemo"
    //cred to access to docker hub 
    registryCredential = 'dockerhub'
  }
  //agent == machina (nodes) | any == any all machine (nodes)
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git([url: 'git@github.com:AlexVereshchaka/Demo1.git', branch: 'main', credentialsId: 'ssh-key-git'])
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build imagename
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
             dockerImage.push('static')
          }
        }
      }
    }
    stage('ansible'){
        steps{
            script{
                ansible all -m sh -a docker service update --image "alexprod/alexdemo:static alexdemo1"
            }
        }
    }
    
    
    }
  }
